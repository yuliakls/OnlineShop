@model MVC5_PROJECT.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<div>
    @using (Html.BeginForm("Authenticate", "Login", FormMethod.Post)) {
        <table >
            <tr  style="border:0px;">
                <td> Email: </td>
                <td> @Html.TextBoxFor(m=>m.Email)</td>
                <td>@Html.ValidationMessageFor(x => x.Email)</td>
            </tr>

            <tr style="border:0px;">

                <td> Password: </td>
                <td> @Html.PasswordFor(m => m.PW)</td>
                <td>@Html.ValidationMessageFor(x => x.PW)</td>
            </tr>

            <tr  style="border:0px;">
                <td> <input id="submit" name="submit" type="submit" value="Login"/> </td>

            </tr>

        </table>
    }
    <br/>
    


</div>